<h1>Add a Jerryism</h1>

<%= form_for @jerryism, url: {action: "create"} do |f| %>
  <div class="form-group">
  <%= f.text_area :text, :class => "form-control", rows: "3" %>
  </div>
  <div class="form-actions">
  <%= f.submit :class => "btn btn-primary" "Save" %>
  </div>
<% end %>



<%= link_to 'Back', jerryisms_path %>
