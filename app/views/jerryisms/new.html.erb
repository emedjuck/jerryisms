<link href='http://fonts.googleapis.com/css?family=Josefin+Slab:600italic' rel='stylesheet' type='text/css'>
<div style="top:15%; left:5%;position:absolute">
<h1 style="font-family: 'Josefin Slab', serif;font-style:italic; font-size:40px; font-weight:600" >Add a Quote</h1>

<%= form_for @jerryism, url: {action: "create"} do |f| %>
  <div class="form-group" style="width:400px">
  <%= f.text_area :text, :class => "form-control", rows: "6"%>
  </div>
  <div class="form-actions">
  <%= f.submit :class => "btn btn-primary", :value => "Save"%>
  </div>
<% end %>



<%= link_to 'Cancel', jerryisms_path, :style=>"color:black;" %>
</div>
